{
    "$schema": "https://json.schemastore.org/swcrc",
    "sourceMaps": true,
    "jsc": {
        "target": "es2021",
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true,
            "useDefineForClassFields": false
        },
        "keepClassNames": true,
        "baseUrl": "./",
        "paths": {
          "lib": ["../lib/src/index"]
        }    
    },
    "module": {
        "type": "commonjs"
    },
    "minify": false
}
